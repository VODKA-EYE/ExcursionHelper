<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ExcursionPreview"
  android:orientation="vertical"
  style="@style/MainBackground">
  <LinearLayout
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/TopPanelBackground">
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <ImageView
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:src="@drawable/logo"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleTextView"
        android:text="ЗАГОЛОВОК"
        style="@style/NormalText"/>
    </LinearLayout>

  </LinearLayout>
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/map_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"/>
      <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/descriptionTextView"
        android:text="ОПИСАНИЕ ОПИСАНИЕ ОПИСАНИЕ ОПИСАНИЕ ОПИСАНИЕ ОПИСАНИЕ ОПИСАНИЕ ОПИСАНИЕ ОПИСАНИЕ ОПИСАНИЕ ОПИСАНИЕ ОПИСАНИЕ ОПИСАНИЕ "
        style="@style/NormalText"/>
      <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/goto_mainmenu_button"
          app:strokeColor="@color/slightly_dark_white"
          app:cornerRadius="24dp"
          app:strokeWidth="4dp"
          android:text="@string/return_button_text"
          style="@style/ButtonWithText"
          />
        <Button
          android:layout_marginStart="8dp"
          android:id="@+id/begin_excursion_button"
          android:layout_width="192dp"
          android:layout_height="wrap_content"
          app:cornerRadius="24dp"
          app:strokeColor="@color/slightly_dark_white"
          app:strokeWidth="4dp"
          android:text="@string/begin_excursion_button_text"
          style="@style/ButtonWithText"/>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</LinearLayout>