<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity"
  android:orientation="vertical"
  android:background="@color/dark_emerald">

  <!-- Title -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/dark_emerald_2">
    <ImageView
      android:layout_width="144dp"
      android:layout_height="144dp"
      android:src="@drawable/logo"/>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_p1"
        android:textColor="@color/brown"
        style="@style/TitleText"/>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/title_p2"
          android:textColor="@color/gray"
          style="@style/TitleText"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/title_p3"
          android:textColor="@color/brown"
          style="@style/TitleText"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/title_p4"
          android:textColor="@color/gray"
          style="@style/TitleText"/>
      </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/title_p5"
          android:textColor="@color/toxic_emerald"
          android:textSize="24dp"
          style="@style/TitleText"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Экскурсии:"
    android:layout_marginStart="4dp"
    style="@style/NormalText"/>
  <ListView
    android:id="@+id/excursions_listview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  </ListView>
</LinearLayout>